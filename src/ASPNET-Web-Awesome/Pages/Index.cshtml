@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome <i class="fa-solid fa-rocket"></i></h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <div class="mt-4">
        <h3>Web Awesome Icons Demo</h3>
        <p>
            <i class="fa-solid fa-home fa-2x me-3"></i>
            <i class="fa-solid fa-user fa-2x me-3"></i>
            <i class="fa-solid fa-heart fa-2x me-3"></i>
            <i class="fa-solid fa-star fa-2x me-3"></i>
            <i class="fa-solid fa-check fa-2x me-3"></i>
        </p>
    </div>
</div>
<div>
    
    <wa-input label="What is your name?"></wa-input>
    <br/>
    <wa-select>
        <wa-option value="">Option 1</wa-option>
        <wa-option value="option-2">Option 2</wa-option>
        <wa-option value="option-3">Option 3</wa-option>
        <wa-option value="option-4">Option 4</wa-option>
        <wa-option value="option-5">Option 5</wa-option>
        <wa-option value="option-6">Option 6</wa-option>
    </wa-select>
</div>
<br/>
<div class="wa-stack wa-gap-xl">
  <div class="wa-flank" style="--flank-size: 12ch;">
    <span>Classic</span>
    <div class="wa-cluster" style="font-size: 1.5em;">
      <wa-icon name="eyedropper"></wa-icon>
      <wa-icon name="grip-vertical"></wa-icon>
      <wa-icon name="play"></wa-icon>
      <wa-icon name="star"></wa-icon>
    </div>
  </div>
  <div class="wa-flank" style="--flank-size: 12ch;">
    <span>Brands</span>
    <div class="wa-cluster" style="font-size: 1.5em;">
      <wa-icon family="brands" name="font-awesome"></wa-icon>
      <wa-icon family="brands" name="web-awesome"></wa-icon>
      <wa-icon family="brands" name="github"></wa-icon>
      <wa-icon family="brands" name="discord"></wa-icon>
    </div>
  </div>
</div>
